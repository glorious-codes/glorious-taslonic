{
  "name": "taslonic",
  "scripts": {
    "source": {
      "root": {
        "base": "src/base/",
        "vue": "src/vue/",
        "react": "src/react/"
      },
      "libs": {
        "styles": {
          "entry": "./src/base/styles/_index.js",
          "output": {
            "filename": "index.js"
          }
        },
        "react": {
          "entry": "./src/react/index.js",
          "output": {
            "library": "taslonicReact",
            "libraryTarget": "umd",
            "filename": "react.js"
          }
        },
        "vue-plugin": {
          "entry": "./src/vue/index.js",
          "output": {
            "library": "taslonicVue",
            "libraryTarget": "umd",
            "libraryExport": "default",
            "filename": "vue-plugin.js"
          }
        }
      }
    },
    "dist": {
      "root": "dist/"
    }
  },
  "styles": {
    "source": {
      "root": "src/base/styles/"
    },
    "dist": {
      "filename": "taslonic.css"
    }
  },
  "images": {
    "source": {
      "root": "src/base/images/",
      "files": "src/base/images/**/*.*"
    },
    "dist": {
      "root": "images/[name].[ext]"
    }
  },
  "tests": {
    "source": {
      "files": [
        "src/**/*.js",
        "!src/**/*.doc.js",
        "!src/**/index.js",
        "!src/**/mocks/**/*.js"
      ]
    }
  }
}
