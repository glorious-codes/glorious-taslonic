@require '_variables'
@require '_mixins'

tag-theme($backgroundColor, $borderColor, $textColor)
  background-color $backgroundColor
  color $textColor
  border-color $borderColor

.t-tag
  display inline-block
  padding 5px
  background-color $color-grey-lighter
  color $color-grey-dark
  font-size $font-size-xxxs
  font-weight bold
  line-height 1
  text-transform uppercase
  border-width 1px
  border-style solid
  border-color $color-grey
  border-radius $default-border-radius
  user-select(none)
  &.t-tag-primary
    tag-theme($color-purple, $color-purple, $color-lightest)
  &.t-tag-secondary
    tag-theme(transparent, $color-purple, $color-purple)
  &.t-tag-info
    tag-theme($color-blue-lighter, $color-blue-light, $color-blue)
  &.t-tag-success
    tag-theme($color-green-lighter, $color-green-light, $color-green)
  &.t-tag-warning
    tag-theme($color-yellow-lighter, $color-yellow-dark, $color-yellow-darker)
  &.t-tag-danger
    tag-theme($color-red-lighter, $color-red-light, $color-red)
