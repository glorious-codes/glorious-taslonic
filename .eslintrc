{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "module": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["*.doc.js"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "complexity": ["error", { "max": 3 }],
    "max-lines": ["error", { "max": 120 }],
    "max-statements": ["error", { "max": 5 },
      { "ignoreTopLevelFunctions": true }
    ]
  },
  "overrides": [
    {
      "files": [ "src/**/*.test.js", "src/base/tests/*.js" ],
      "rules": {
        "max-lines": ["error", { "max": 300 }],
        "max-statements": ["error", { "max": 25 },
          { "ignoreTopLevelFunctions": true }
        ]
      }
    }
  ]
}
