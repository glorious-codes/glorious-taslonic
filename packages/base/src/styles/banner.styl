@require '_variables'

banner-theme($theme, $backgroundColor, $textColor)
  &.t-banner-{$theme}
    background-color $backgroundColor
    color $textColor
    .t-close-button
      color $textColor

.t-banner
  position relative
  padding 10px 30px 10px 10px
  background-color $color-blue-lighter
  color $color-blue
  font-size $font-size-xs
  border-radius $default-border-radius
  banner-theme('warning', $color-yellow-lighter, $color-yellow-darker)
  banner-theme('danger', $color-red-lighter, $color-red)
  banner-theme('success', $color-green-lighter, $color-green)
  .t-close-button
    position absolute
    top 18px
    right 8px
    color $color-blue
    transform translate(-50%,-50%)

.t-banner-action
  margin-top 10px
