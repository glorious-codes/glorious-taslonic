{
  "name": "taslonic",
  "scripts": {
    "source": {
      "root": {
        "base": "src/base/",
        "vue": "src/vue/",
        "react": "src/react/"
      },
      "libs": {
        "taslonic": {
          "entry": "src/base/styles/_index.js",
          "output": "index.js"
        },
        "taslonicReact": {
          "entry": "src/react/index.js",
          "output": "react/index.js"
        },
        "taslonicVue": {
          "entry": "src/vue/index.js",
          "output": "vue/index.js"
        }
      }
    },
    "dist": {
      "root": "dist/"
    }
  },
  "styles": {
    "source": {
      "root": "src/base/styles/"
    },
    "dist": {
      "filename": "[name].css"
    }
  },
  "images": {
    "source": {
      "root": "src/base/images/",
      "files": "src/base/images/**/*.*"
    },
    "dist": {
      "root": "images/[name].[ext]"
    }
  },
  "tests": {
    "source": {
      "files": [
        "src/**/*.js",
        "!src/**/*.doc.js",
        "!src/**/index.js",
        "!src/**/mocks/**/*.js"
      ]
    }
  }
}
