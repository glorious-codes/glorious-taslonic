:root {

  // GRID
  --t-row-gutter 20px
  --t-col-gutter 20px
  --t-col-padding calc(var(--t-col-gutter)/2)

  // COLORS:GREY
  --t-color-grey-lighter      #F9F9F9
  --t-color-grey-light        #DFE3E8
  --t-color-grey              #C4CDD5
  --t-color-grey-dark         #627380
  --t-color-grey-darker       #222B35
  // COLORS:RED
  --t-color-red-lighter       #FFF0EB
  --t-color-red-light         #E68A8E
  --t-color-red               #E6324B
  --t-color-red-dark          #CF1946
  --t-color-red-darker        #960E1B
  // COLORS:PURPLE
  --t-color-purple-x-lighter  #E6E8FF
  --t-color-purple-lighter    #BFC4FF
  --t-color-purple-light      #8089ff
  --t-color-purple            #6772FF
  --t-color-purple-dark       #38458C
  --t-color-purple-darker     #213076

  // BORDER:RADIUS
  --t-default-border-radius   4px

  // FONT-SIZE
  --t-font-size-xxxxs  0.500rem  // 08px
  --t-font-size-xxxs   0.625rem  // 10px
  --t-font-size-xxs    0.750rem  // 12px
  --t-font-size-xs     0.875rem  // 14px
  --t-font-size-sm     1.000rem  // 16px
  --t-font-size-md     1.125rem  // 18px
  --t-font-size-lg     1.250rem  // 20px
  --t-font-size-xl     1.500rem  // 24px
  --t-font-size-xxl    2.250rem  // 36px
  --t-font-size-xxxl   3.000rem  // 48px

}
